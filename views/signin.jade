extends layout
block content
  span!= message
  div.row
    div.col-xs-4
      form(method="post", action="/signin")
        .form-group
          label Username:
          input.form-control(type="text", name="username")
        .form-group
          label Password:
          input.form-control(type="password", name="password")
          br
          input.btn.btn-default(type="submit", value="Signin")
